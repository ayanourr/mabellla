{%- liquid
  assign social_instagram = settings.social_instagram_link
  assign social_facebook = settings.social_facebook_link
  assign social_twitter = settings.social_twitter_link
  assign social_tiktok = settings.social_tiktok_link
  assign social_snapchat = settings.social_snapchat_link
  assign social_whatsapp = settings.social_whatsapp_link
-%}

<footer class="footer bg-gray-900 text-white">
  <div class="footer__content-top py-16">
    <div class="page-width">
      <div class="footer__blocks-wrapper grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        
        {%- comment -%} Brand Section {%- endcomment -%}
        <div class="footer__block footer__block--brand lg:col-span-2">
          <div class="footer__brand mb-6">
            {%- if settings.logo != blank -%}
              <img 
                src="{{ settings.logo | image_url: width: 200 }}" 
                alt="{{ shop.name }}" 
                class="footer__logo h-12 w-auto filter brightness-0 invert"
                loading="lazy"
              >
            {%- else -%}
              <h2 class="footer__heading text-3xl font-arabic-serif font-bold text-gold-400">
                {{ shop.name }}
              </h2>
            {%- endif -%}
          </div>
          
          <div class="footer__description mb-8">
            <p class="text-gray-300 leading-relaxed max-w-md">
              {{ settings.footer_description | default: 'مابيلا - وجهتك الأولى للأزياء النسائية الفاخرة. نقدم أجمل التصاميم التي تجمع بين الأناقة والراحة، لتكوني دائماً في أبهى حلة.' }}
            </p>
          </div>

          {%- comment -%} Newsletter Signup {%- endcomment -%}
          <div class="footer__newsletter">
            <h3 class="text-lg font-semibold text-gold-400 mb-4">اشتركي في النشرة الإخبارية</h3>
            <p class="text-gray-400 text-sm mb-4">احصلي على آخر العروض والمنتجات الجديدة</p>
            <form class="footer__newsletter-form flex flex-col sm:flex-row gap-3">
              <input 
                type="email" 
                placeholder="أدخلي بريدك الإلكتروني"
                class="flex-1 px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-gold-500 focus:border-transparent"
                required
              >
              <button 
                type="submit"
                class="btn-primary px-6 py-3 whitespace-nowrap"
              >
                اشتراك
              </button>
            </form>
          </div>
        </div>

        {%- comment -%} Quick Links {%- endcomment -%}
        <div class="footer__block footer__block--menu">
          <h3 class="footer__heading text-xl font-bold text-gold-400 mb-6">روابط سريعة</h3>
          <ul class="footer__list space-y-3">
            <li><a href="{{ routes.root_url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">الرئيسية</a></li>
            <li><a href="{{ routes.all_products_collection_url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">جميع المنتجات</a></li>
            <li><a href="{{ routes.collections_url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">المجموعات</a></li>
            <li><a href="#about" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">من نحن</a></li>
            <li><a href="{{ routes.search_url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">البحث</a></li>
            {%- if blog.handles.size > 0 -%}
              <li><a href="{{ blog.url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">المدونة</a></li>
            {%- endif -%}
          </ul>
        </div>

        {%- comment -%} Customer Service {%- endcomment -%}
        <div class="footer__block footer__block--service">
          <h3 class="footer__heading text-xl font-bold text-gold-400 mb-6">خدمة العملاء</h3>
          <ul class="footer__list space-y-3">
            <li><a href="{{ routes.account_url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">حسابي</a></li>
            <li><a href="{{ routes.cart_url }}" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">سلة التسوق</a></li>
            <li><a href="#" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">تتبع الطلب</a></li>
            <li><a href="#" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">سياسة الإرجاع</a></li>
            <li><a href="#" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">الشحن والتوصيل</a></li>
            <li><a href="#" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">الأسئلة الشائعة</a></li>
            <li><a href="#" class="footer__link text-gray-300 hover:text-gold-400 transition-colors">اتصل بنا</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  {%- comment -%} Contact & Social Section {%- endcomment -%}
  <div class="footer__content-middle bg-gray-800 py-12">
    <div class="page-width">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        
        {%- comment -%} Contact Information {%- endcomment -%}
        <div class="footer__contact">
          <h3 class="text-xl font-bold text-gold-400 mb-6">تواصلي معنا</h3>
          <div class="space-y-4">
            {%- if settings.footer_phone -%}
              <div class="flex items-center space-x-3 space-x-reverse">
                <div class="bg-gold-500 p-2 rounded-full">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-300 font-medium">{{ settings.footer_phone }}</p>
                  <p class="text-gray-400 text-sm">متاح 24/7</p>
                </div>
              </div>
            {%- endif -%}

            {%- if settings.footer_email -%}
              <div class="flex items-center space-x-3 space-x-reverse">
                <div class="bg-gold-500 p-2 rounded-full">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-300 font-medium">{{ settings.footer_email }}</p>
                  <p class="text-gray-400 text-sm">للاستفسارات والدعم</p>
                </div>
              </div>
            {%- endif -%}

            {%- if settings.footer_address -%}
              <div class="flex items-start space-x-3 space-x-reverse">
                <div class="bg-gold-500 p-2 rounded-full mt-1">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-300 font-medium">{{ settings.footer_address }}</p>
                  <p class="text-gray-400 text-sm">زوري متجرنا</p>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>

